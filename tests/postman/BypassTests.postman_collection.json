{
	"info": {
		"name": "Taxi Booking - Bypass Testing Suite",
		"description": "Collection of bypass tests to validate server-side validation by sending manipulated requests",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Setup - Register User",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.collectionVariables.set(\"testEmail\", \"bypass+\" + Date.now() + \"@test.com\");"
						]
					}
				},
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Registration successful\", function() {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.be.true;",
							"    pm.collectionVariables.set(\"userId\", jsonData.userId);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [{"key": "Content-Type", "value": "application/json"}],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"test123\",\n  \"firstName\": \"Bypass\",\n  \"lastName\": \"Tester\",\n  \"phoneNumber\": \"9876543210\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/auth/register",
					"host": ["{{baseUrl}}"],
					"path": ["api", "auth", "register"]
				}
			}
		},
		{
			"name": "Setup - Login User",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Login successful\", function() {",
							"    pm.response.to.have.status(200);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.be.true;",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [{"key": "Content-Type", "value": "application/json"}],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"test123\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/auth/login",
					"host": ["{{baseUrl}}"],
					"path": ["api", "auth", "login"]
				}
			}
		},
		{
			"name": "BYPASS 1: Past Pickup Time",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Server rejects past pickup time\", function() {",
							"    pm.response.to.have.status(400);",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.be.false;",
							"    pm.expect(jsonData.message).to.include(\"Invalid pickup time\");",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [{"key": "Content-Type", "value": "application/json"}],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"pickupLatitude\": 19.0760,\n  \"pickupLongitude\": 72.8777,\n  \"dropLatitude\": 19.1136,\n  \"dropLongitude\": 72.9083,\n  \"pickupTime\": \"2020-01-01T10:00:00\",\n  \"passengers\": 2,\n  \"vehicleType\": \"SEDAN\",\n  \"paymentMode\": \"CASH\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/bookings/create",
					"host": ["{{baseUrl}}"],
					"path": ["api", "bookings", "create"]
				}
			}
		},
